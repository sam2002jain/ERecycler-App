<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcomeactivity">

    <TextView
        android:id="@+id/txtview1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="E-Waste Facility Locator"
        android:textAlignment="center"
        android:textColor="#219734"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Green India Clean India"
        android:textAlignment="center"
        android:textColor="#551B39"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/txtview1"
        app:layout_constraintStart_toStartOf="@+id/txtview1"
        app:layout_constraintTop_toBottomOf="@+id/txtview1" />

    <Button
        android:id="@+id/buttonsignup"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:text="SignUp"
        android:onClick="onbuttonsignupclicked"
        android:background="@drawable/button_sign_up"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonsingin"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="40dp"
        android:text="SignIn"
        android:onClick="onbuttonsigninclicked"
        android:background="@drawable/button_sign_up"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002"
        app:srcCompat="@drawable/renewable" />

</androidx.constraintlayout.widget.ConstraintLayout>